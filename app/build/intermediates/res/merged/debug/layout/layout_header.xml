<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/profileInformationLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/navViewHeader"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:id="@+id/textViewProfileWelcomeMessageHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:textColor="@color/profileHeader"
        android:text="@string/profile_welcome_message"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textViewProfileIdHeader"
        android:textColor="@color/profileHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="@string/profile_id_header"
        android:layout_below="@+id/textViewProfileWelcomeMessageHeader"
        android:layout_alignStart="@+id/textViewProfileNameHeader" />

    <TextView

        android:id="@+id/textViewProfileId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/profile_id_header"
        android:textSize="18sp"
        android:layout_below="@+id/textViewProfileWelcomeMessageHeader"
        android:layout_alignStart="@+id/textViewProfileName" />

    <TextView
        android:layout_marginTop="15dp"
        android:id="@+id/textViewProfileNameHeader"
        android:textColor="@color/profileHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewProfileId"
        android:layout_marginBottom="15dp"
        android:textSize="18sp"
        android:layout_marginStart="3dp"
        android:text="@string/profile_name_header" />

    <TextView

        android:id="@+id/textViewProfileName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/profile_name_header"
        android:textSize="18sp"
        android:layout_alignTop="@+id/textViewProfileNameHeader"
        android:layout_toEndOf="@+id/textViewProfileNameHeader"
        android:layout_marginStart="13dp" />

    <TextView
        android:id="@+id/textViewProfilePhoneHeader"
        android:textColor="@color/profileHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="@string/profile_phone_header"
        android:layout_below="@+id/textViewProfileNameHeader"
        android:layout_alignStart="@+id/textViewProfileNameHeader" />

    <TextView

        android:id="@+id/textViewProfilePhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/profile_phone_header"
        android:textSize="18sp"
        android:layout_alignTop="@+id/textViewProfilePhoneHeader"
        android:layout_toEndOf="@+id/textViewProfilePhoneHeader"
        android:layout_marginStart="11dp" />


</RelativeLayout>